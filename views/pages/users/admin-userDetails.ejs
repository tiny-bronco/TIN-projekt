<%- include('./../../fragments/header2.ejs') %>
    <%- include('./../../fragments/nav-ver.ejs') %>

        <div class="main">
            <main>
                <table class="data" cellpadding="5">
                    <tr>
                        <td colspan="2">
                            <h4> Personal Details</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>USERNAME</td>
                        <td>
                            <%=user.username %>
                        </td>
                    </tr>
                    <tr>
                        <td>PASSWORD</td>
                        <td>
                            <%=user.password %>
                        </td>
                    </tr>
                    <tr>
                        <td>E-MAIL</td>
                        <td>
                            <%=user.email %>
                        </td>
                    </tr>

                </table>
                <a href="/user/edit/<%=user._id%>"><button style="margin-left: 10px">Edit</button></a>
                <br>
                <table class="data" cellpadding="5">
                    <tr>
                        <td colspan="7">
                            <h4> Artworks</h4>
                        </td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Thumbnail</th>
                        <th colspan="3">Actions</th>
                    </tr>
                    <% for (let artwork of artworks) { %>
                        <tr>

                            <td>
                                <%=artwork.title %>
                            </td>
                            <td>
                                <%=artwork.description %>
                            </td>
                            <td>
                                <%=artwork.file %>
                            </td>
                            <td><a href="/artwork/details/<%=artwork._id%>">details</a></td>
                            <td><a href="/artwork/edit/<%=artwork._id%>">edit<a></td>
                            <td><a href="/artwork/delete/<%=artwork._id%>">remove<a></td>
                        </tr>
                        <% } %>

                </table>
                <a href="/../artwork/add"><button style="margin-left: 10px">Add new Artwork</button></a>

                <table>
                    <tr>
                        <td colspan="8">
                            <h4> Offerts </h4>
                        </td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Customer</th>
                        <th>Purchase date</th>
                        <th colspan="3">Actions</th>

                    </tr>
                    <% for (let offert of offerts) { %>
                        <tr>

                            <td>
                                <%=offert.title %>
                            </td>
                            <td>
                                <%=offert.price %> $
                            </td>
                            <td>
                                <%=offert.customer_id %>
                            </td>
                            <td>
                                <%=offert.purcharseDate %>
                            </td>
                            <td><a href="/offert/details/<%=offert._id%>">details</a></td>
                            <td><a href="/offert/edit/<%=offert._id%>">edit<a></td>
                            <td><a href="/offert/delete/<%=offert._id%>">remove<a></td>
                        </tr>
                        <% } %>

                </table>
                <a href="/../offert/add"><button style="margin-left: 10px">Add new Offert</button></a>
                <br>
                <br>
            </main>
        </div>
        <%- include('./../../fragments/footer.ejs') %>