<%- include('./../fragments/header2.ejs') %>
    <%- include('./../fragments/nav-ver.ejs') %>

        <div class="main">
            <main>
                <a href="user/add"><button>Add new user</button></a>
                <table class="data">
                    <tr>
                        <td colspan="6">
                            <h4>Users</h4>
                        </td>
                    </tr>
                    <tr>
                        <th>USERNAME</th>
                        <th>PASSWORD</th>
                        <th>E-MAIL</th>
                        <th colspan="3">ACTIONS</th>
                    </tr>
                    <% for (let user of users) { %>
                        <tr>
                            <td>
                                <%= user.username %>
                            </td>
                            <td>
                                <%= user.password %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td><a href="user/details/<%=user._id%>">details</a></td>
                            <td><a href="user/edit/<%=user._id%>">edit<a></td>
                            <td><a href="user/delete/<%=user._id%>">remove<a></td>
                        </tr>
                        <% } %>
                </table>
            </main>
        </div>
        <%- include('./../fragments/footer.ejs') %>